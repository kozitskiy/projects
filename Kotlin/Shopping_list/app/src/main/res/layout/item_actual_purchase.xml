<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/purchase_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginStart="15dp"
            android:button="@drawable/checkbox_selector"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="@dimen/md_lines">

            <TextView
                android:id="@+id/purchase_saved_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="@dimen/purchase_list_text_size"
                tools:text="1" />

            <ImageView
                android:id="@+id/purchase_saved_img"
                android:layout_width="@dimen/purchase_list_image_size"
                android:layout_height="@dimen/purchase_list_image_size"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:src="@drawable/purchase_default"
                tools:text="Lists" />

            <TextView
                android:id="@+id/purchase_saved_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/purchase_list_margin_start"
                android:textSize="@dimen/purchase_list_text_size"
                tools:text="Lists" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>